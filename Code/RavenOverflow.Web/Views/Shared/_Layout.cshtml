@using RavenOverflow.Web.Views.Shared
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <title>Raven Overflow</title>

    <link rel="shortcut icon" href="http://cdn.sstatic.net/stackoverflow/img/favicon.ico">
    <link rel="apple-touch-icon" href="http://cdn.sstatic.net/stackoverflow/img/apple-touch-icon.png">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    
    @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>*@
</head>
<body class="home-page">

    @Raven.Client.MvcIntegration.RavenProfiler.CurrentRequestSessions();

    <noscript><div id="noscript-padding"></div></noscript>

    <div id="notify-container"></div>
    <div id="overlay-header"></div>
    <div id="custom-header"></div>
    <div class="container">
        <div id="header">
            <div id="topbar">
                <div id="hlinks">
                    <span id="hlinks-user">
                        @Html.Partial("_Authentication", ViewBag.UserDetails == null ? null : (AuthenticationViewModel)ViewBag.UserDetails)
                        @*<span class="profile-triangle">&#9662;</span>
                        <a href="/users/30674/pure-krome" class="profile-link">Pure.Krome</a>&nbsp;*@
                  </span>
                </div>
            </div>

            <br class="cbt">

            <div id="hlogo">
                <img src="http://ravendb.net/static/logo/RavenDBlogo.png" height="61px" alt="RavenDb"/>
            </div>

            <div id="hmenus">
            </div>
        </div>

        <div id="content">
            <div id="mainbar">
                <div class="subheader">
                    <h1 id="h-top-questions">Top Questions</h1>
                    <div id="tabs">
                        interesting | featured | hot | week | month
                    </div>
                </div>
                <div id="question-mini-list">
                    @RenderBody()
                </div>

                <h2 class="bottom-notice">Looking for more? Goto the real <a href="http://stackoverflow.com">Stack Overflow site</a>.</h2>
            </div>
        
            <div id="sidebar">
                @RenderSection("SideBar", false)
                @*<div class="module" id="recent-tags">
                    <h4 id="h-recent-tags">Recent Tags</h4>
                    <div id="recent-tags-list">
                    </div>
                </div>*@
            </div>
        </div>
    </div>

</body>
</html>